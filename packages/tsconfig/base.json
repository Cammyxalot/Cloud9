{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/recommended/tsconfig.json",
  "display": "Base",
  "compilerOptions": {
    "composite": false,

    "noPropertyAccessFromIndexSignature": false,
    "resolveJsonModule": true,
    
    "isolatedModules": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": false
  }
}
